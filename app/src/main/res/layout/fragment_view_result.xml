<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewResultFragment"
    android:padding="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_electro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/lavadora"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        tools:text="lavadora"
        />

    <TextView
        android:id="@+id/tv_consumido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/secondary_text"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:text="Has consumido 2 horas"
        />

    <TextView
        android:id="@+id/tv_porTanto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/secondary_text"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/conector"
        />

    <TextView
        android:id="@+id/tv_gastado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/secondary_text"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:text="Has gastado 100 C$"
        />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_Ok"
        style="@style/Buttons"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        />

</LinearLayout>