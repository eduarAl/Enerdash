<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppOnboardingTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Buttons" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dialog.FullScreen" parent="Theme.MaterialComponents.Dialog">
        <item name="android:padding">8dp</item>
        <item name="android:windowBackground">@color/White</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="OnboardingTextViews">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_Top</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/desc_text</item>
    </style>

    <style name="appliancesPictures">
        <item name="android:layout_width">@dimen/img_electro_w</item>
        <item name="android:layout_height">@dimen/img_electro_h</item>
    </style>
</resources>